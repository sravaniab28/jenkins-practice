pipeline {
    agent { node { label 'AGENT-1' } }
    options {
        timeout(time: 1, unit: 'HOURS') 
    }
    environment { 
        USERNAME = 'srvani'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                 ls -ltr
                 pwd
                 echo "hello from git web hook push event"
                 printenv
            
                '''

            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                //error 'this is fail'
            }
        }
         stage('Example') {
            environment { 
                AUTH = credentials('ssh-auth1') 
            }
            steps {
                sh 'printenv'
            }
        }
    }
        
     post { 
        always { 
            echo 'I will always run whether the job is success or not'
        }
        success{
            echo 'i will run only job is success'
        }
        failure{
            echo 'i will run only job is fail'
        }
}

}
